  div class="flex items-center space-x-4"
    div class="flex items-center justify-center w-10 h-10 bg-orange-500 text-white rounded-full font-bold" ✓
    div class="w-16 h-1 bg-orange-500 rounded"
    div class="flex items-center justify-center w-10 h-10 bg-orange-500 text-white rounded-full font-bold" 2
    div class="w-16 h-1 bg-gray-300 rounded"

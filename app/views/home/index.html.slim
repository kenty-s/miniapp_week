  div.hero-section class="text-center mb-8"
    div.hero-character
      h1.character-name style="font-family: 'Rampart One', cursive; font-size: 3.5rem; margin-bottom: 1rem; color: #dc2626; line-height: 1.2; text-shadow: 2px 2px 4px rgba(0,0,0,0.3);"
